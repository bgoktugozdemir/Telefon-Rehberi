@model Telefon_Rehberi.Areas.Admin.Models.DepartmanYonetim.DepartmanDuzenleViewModel
@{
    ViewBag.Title = "DepartmanDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-auto col-sm-6">
    
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Departman Bilgisi</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("DepartmanDuzenle", "DepartmanYonetim", FormMethod.Post, new {enctype = "multipart/form-data"}))
            {
                @Html.HiddenFor(model => model.Departman.ID)
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Ad</label>
                    <div class="col-lg-9">
                        @Html.EditorFor(model => model.Departman.Ad, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Ad"} })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label"></label>
                    <div class="col-lg-9">
                        <a href="@Url.Action("Index","UI")" class="btn btn-secondary">İptal</a>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
