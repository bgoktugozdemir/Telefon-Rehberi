<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Telefon Rehberi">
    <meta name="author" content="bgoktugozdemir">
    <title>@ViewBag.Title - Telefon Rehberi</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container w80">
            <a class="navbar-brand" href="@Url.Action("Index","Home", new { Area = ""})">Telefon Rehberi</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home", new { Area = ""})">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","UI", new { Area = "Admin"})">Admin</a>
                    </li>
                    @if (Session["UserName"] != null)
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Cikis","Giris", new { Area = "Admin"})">Çıkış</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Reset","Giris", new { Area = "Admin"})">Şifreyi Sıfırla</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container w80">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Telefon Rehberi</h1>
                <p class="lead">Telefon rehberiniz hazır!</p>
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Site.js"></script>
</body>
</html>